{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "tsc: watch",
			"type": "shell",
			"command": "${workspaceFolder}/node_modules/.bin/tsc",
			"args": ["--watch"],
			"problemMatcher": "$tsc-watch",
			"group": { "kind": "build", "isDefault": true },
			"isBackground": true,
			"presentation": { "reveal": "never" },
			"runOptions": { "runOn": "folderOpen" }
		}
	]
}
